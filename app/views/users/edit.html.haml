%h2
= semantic_form_for @user do |f|
  = semantic_fields_for @user.name do |name_fields|
    = name_fields.inputs do
      = name_fields.input :first, :label => "First name"
      = name_fields.input :last_initial, :as => :select, :collection => [['A', 'A'],['B', 'B'],['C', 'C'],['D', 'D'],['E', 'E'],['F', 'F'],['G', 'G'],['H', 'H'],['I', 'I'],['J', 'J'],['K', 'K'],['L', 'L'],['M', 'M'],['N', 'N'],['O', 'O'],['P', 'P'],['Q', 'Q'],['R', 'R'],['S', 'S'],['T', 'T'],['U', 'U'],['V', 'V'],['W', 'W'],['X', 'X'],['Y', 'Y'],['Z', 'Z']]
  = f.inputs do
    = f.input :female, :as => :radio, :label => "Gender", :collection => [["Male",false], ["Female",true]]
    = f.input :date_of_birth, :as => :date, :start_year => 1900, :end_year => Time.now.year
    = f.input :zipcode
    = f.input :email, :as => :email
    %i (leave blank if you don't want to change it)
    = f.input :password, :as => :password
    = f.input :password_confirmation, :as => :password
    %i (we need your current password to confirm your changes)
    = f.input :current_password, :as => :password
  
  %p= f.submit "Update"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", user_path, :confirm => "Are you sure?", :method => :delete}.
= link_to "Back", :back