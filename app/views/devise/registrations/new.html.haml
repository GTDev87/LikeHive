%h2 Sign up
= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :first_name
    = f.input :last_initial, :as => :select, :collection => [['A', 'A'],['B', 'B'],['C', 'C'],['D', 'D'],['E', 'E'],['F', 'F'],['G', 'G'],['H', 'H'],['I', 'I'],['J', 'J'],['K', 'K'],['L', 'L'],['M', 'M'],['N', 'N'],['O', 'O'],['P', 'P'],['Q', 'Q'],['R', 'R'],['S', 'S'],['T', 'T'],['U', 'U'],['V', 'V'],['W', 'W'],['X', 'X'],['Y', 'Y'],['Z', 'Z']]
    = f.input :female, :as => :radio, :label => "Gender", :collection => [["Male",false], ["Female",true]]
    = f.input :email, :as => :email
    = f.input :password, :as => :password
    = f.input :password_confirmation, :as => :password
  %p= f.submit "Sign up"
= render :partial => "devise/shared/links"
