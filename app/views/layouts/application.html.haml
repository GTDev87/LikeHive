- html_tag class: 'no-js' do
  %head
    %title LikeHive
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    = stylesheet_link_tag 'jquery', :application
    = stylesheet_link_tag 'main.css', :media => 'screen, projection'  
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    / stylesheet_link_tag 'blueprint/buttons.css', :media => 'screen, projection'
    = javascript_include_tag :application
    = csrf_meta_tags
    %body{:class => params[:controller]}
      #container.container
        %header
          %h1 LikeHive
          %nav
            - if current_user
              Logged in as #{current_user.email},
              = link_to 'Profile', profile_path
              = link_to 'Settings', settings_path
              = link_to 'Mailbox', mailbox_path
              
              = link_to "Log out", logout_path
            - else
              = link_to "Sign up", signup_path
              = form_tag sessions_path do
                = label_tag :email
                = text_field_tag :email, params[:email]
                = label_tag :password
                = password_field_tag :password
                = check_box_tag :remember_me, 1, params[:remember_me]
                = label_tag :remember_me
                = submit_tag "Log in"
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
        #main{:role => "main"}
          = yield
        %footer
          %br